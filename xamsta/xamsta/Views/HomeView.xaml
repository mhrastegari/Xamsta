<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="xamsta.Views.HomeView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:cm="http://apes.ge"
    xmlns:sh="http://sharpnado.com"
    xmlns:vm="clr-namespace:xamsta.ViewModels"
    xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
    BackgroundColor="Transparent"
    NavigationPage.HasNavigationBar="False">
    <ContentPage.BindingContext>
        <vm:HomeViewModel />
    </ContentPage.BindingContext>
    <sh:MaterialFrame Style="{StaticResource DefaultFrame}" StyleClass="blur">
        <Grid>
            <Grid.Background>
                <SolidColorBrush Color="{AppThemeBinding Dark=#77000000, Light=#77ffffff}" />
            </Grid.Background>
            <ScrollView Padding="0,0,0,15" VerticalScrollBarVisibility="Never">
                <StackLayout>
                    <Label
                        x:Name="count"
                        FontAttributes="Bold"
                        FontSize="16"
                        HorizontalOptions="StartAndExpand"
                        Text="{Binding unfollowersCount, StringFormat='Unfollowers: {0}'}"
                        VerticalOptions="End" />
                    <FlexLayout
                        x:Name="UnfollowersCV"
                        AlignContent="Start"
                        AlignItems="Start"
                        BindableLayout.ItemsSource="{Binding unFollowersList}"
                        JustifyContent="Center"
                        Wrap="Wrap">
                        <BindableLayout.EmptyViewTemplate>
                            <DataTemplate>
                                <ActivityIndicator
                                    Margin="0,120,0,0"
                                    HeightRequest="80"
                                    HorizontalOptions="{OnPlatform UWP=FillAndExpand,
                                                                   Default=CenterAndExpand}"
                                    IsRunning="True"
                                    VerticalOptions="CenterAndExpand"
                                    WidthRequest="{OnPlatform Default=80,
                                                              UWP=480}"
                                    Color="{AppThemeBinding Dark=White,
                                                            Light=Black}" />
                            </DataTemplate>
                        </BindableLayout.EmptyViewTemplate>
                        <BindableLayout.ItemTemplate>
                            <DataTemplate>
                                <StackLayout
                                    Margin="10"
                                    HeightRequest="100"
                                    HorizontalOptions="CenterAndExpand"
                                    WidthRequest="{OnIdiom Default=350,
                                                           Desktop=450}">
                                    <cm:ContextMenuContainer x:Name="container1" HorizontalOptions="StartAndExpand">
                                        <cm:ContextMenuContainer.MenuItems>
                                            <cm:ContextMenuItem
                                                Command="{Binding Source={x:Reference UnfollowersCV}, Path=BindingContext.SelectedUserCommand}"
                                                CommandParameter="{Binding .}"
                                                Icon="next.png"
                                                IsDestructive="False"
                                                Text="Show details" />
                                            <cm:ContextMenuItem
                                                Command="{Binding Source={x:Reference UnfollowersCV}, Path=BindingContext.UnfollowCommand}"
                                                CommandParameter="{Binding .}"
                                                Icon="Unfollow.png"
                                                IsDestructive="True"
                                                Text="Unfollow" />
                                        </cm:ContextMenuContainer.MenuItems>
                                        <cm:ContextMenuContainer.Content>
                                            <Grid BackgroundColor="Transparent">
                                                <sh:MaterialFrame CornerRadius="10" MaterialTheme="{AppThemeBinding Dark=Dark, Light=Acrylic}">
                                                    <Grid BackgroundColor="Transparent">

                                                        <StackLayout
                                                            Padding="{OnPlatform Default=15,
                                                                                 macOS='0,15,30,15'}"
                                                            xct:TouchEffect.NativeAnimation="true"
                                                            HeightRequest="65"
                                                            Orientation="Horizontal"
                                                            Spacing="15">
                                                            <Image
                                                                Margin="{OnPlatform Default=0,
                                                                                    macOS='20,0,0,0'}"
                                                                BackgroundColor="Transparent"
                                                                HeightRequest="60"
                                                                HorizontalOptions="Start"
                                                                MinimumHeightRequest="60"
                                                                MinimumWidthRequest="60"
                                                                Source="{Binding ProfilePicUrl}"
                                                                VerticalOptions="CenterAndExpand"
                                                                WidthRequest="60">
                                                                <Image.Clip>
                                                                    <EllipseGeometry
                                                                        Center="30,30"
                                                                        RadiusX="30"
                                                                        RadiusY="30" />
                                                                </Image.Clip>
                                                            </Image>
                                                            <Image
                                                                Margin="-30,0,0,0"
                                                                HeightRequest="15"
                                                                HorizontalOptions="Start"
                                                                IsVisible="{Binding IsVerified}"
                                                                Source="verified.png"
                                                                TranslationY="-3"
                                                                VerticalOptions="End"
                                                                WidthRequest="15" />
                                                            <StackLayout VerticalOptions="CenterAndExpand">
                                                                <Label
                                                                    FontAttributes="Bold"
                                                                    FontSize="14"
                                                                    HorizontalOptions="Start"
                                                                    Text="{Binding FullName}"
                                                                    VerticalOptions="CenterAndExpand"
                                                                    WidthRequest="110" />
                                                                <Label
                                                                    FontSize="12"
                                                                    HorizontalOptions="StartAndExpand"
                                                                    Text="{Binding UserName, StringFormat='@{0}'}"
                                                                    VerticalOptions="CenterAndExpand" />
                                                            </StackLayout>
                                                            <StackLayout.GestureRecognizers>
                                                                <TapGestureRecognizer Command="{Binding Source={x:Reference UnfollowersCV}, Path=BindingContext.SelectedUserCommand}" CommandParameter="{Binding .}" />
                                                            </StackLayout.GestureRecognizers>
                                                        </StackLayout>
                                                        <Frame
                                                            Margin="0,0,15,0"
                                                            Padding="{OnPlatform Android='0,0,0,2',
                                                                                 Default=0}"
                                                            BackgroundColor="{AppThemeBinding Dark=#262626,
                                                                                              Light=#F2F2F2}"
                                                            CornerRadius="5"
                                                            HasShadow="False"
                                                            HeightRequest="35"
                                                            HorizontalOptions="EndAndExpand"
                                                            MinimumHeightRequest="35"
                                                            MinimumWidthRequest="90"
                                                            VerticalOptions="CenterAndExpand"
                                                            WidthRequest="90">
                                                            <Grid BackgroundColor="Transparent">
                                                                <ActivityIndicator
                                                                    x:Name="loading"
                                                                    HeightRequest="25"
                                                                    HorizontalOptions="CenterAndExpand"
                                                                    IsVisible="True"
                                                                    TranslationY="0"
                                                                    VerticalOptions="CenterAndExpand"
                                                                    WidthRequest="{OnPlatform Default=25,
                                                                                              UWP=80}"
                                                                    Color="{AppThemeBinding Dark=White,
                                                                                            Light=Black}" />
                                                                <Button
                                                                    BackgroundColor="{AppThemeBinding Dark=#262626,
                                                                                                      Light=#F2F2F2}"
                                                                    Command="{Binding Source={x:Reference UnfollowersCV}, Path=BindingContext.UnfollowCommand}"
                                                                    CommandParameter="{Binding .}"
                                                                    CornerRadius="5"
                                                                    HeightRequest="35"
                                                                    Text="Unfollow"
                                                                    TextTransform="None"
                                                                    VerticalOptions="CenterAndExpand"
                                                                    WidthRequest="90">
                                                                    <VisualStateManager.VisualStateGroups>
                                                                        <VisualStateGroup x:Name="CommonStates">
                                                                            <VisualState x:Name="Pressed">
                                                                                <VisualState.Setters>
                                                                                    <Setter Property="BackgroundColor" Value="Transparent" />
                                                                                    <Setter Property="Text" Value="" />
                                                                                    <Setter TargetName="loading" Property="ActivityIndicator.IsRunning" Value="True" />
                                                                                </VisualState.Setters>
                                                                            </VisualState>
                                                                        </VisualStateGroup>
                                                                    </VisualStateManager.VisualStateGroups>
                                                                </Button>
                                                            </Grid>
                                                        </Frame>
                                                    </Grid>
                                                    <sh:MaterialFrame.GestureRecognizers>
                                                        <DragGestureRecognizer CanDrag="True" />
                                                        <DropGestureRecognizer AllowDrop="True" />
                                                    </sh:MaterialFrame.GestureRecognizers>
                                                </sh:MaterialFrame>
                                            </Grid>
                                        </cm:ContextMenuContainer.Content>
                                    </cm:ContextMenuContainer>
                                </StackLayout>
                            </DataTemplate>
                        </BindableLayout.ItemTemplate>
                    </FlexLayout>
                </StackLayout>
            </ScrollView>
            <sh:MaterialFrame
                x:Name="header"
                AcrylicGlowColor="Gray"
                Style="{StaticResource DefaultFrame}"
                StyleClass="blur"
                VerticalOptions="Start">
                <StackLayout
                    Orientation="Horizontal"
                    Spacing="20"
                    VerticalOptions="CenterAndExpand">
                    <Image
                        x:Name="profile"
                        BackgroundColor="Gray"
                        HorizontalOptions="Start"
                        MinimumHeightRequest="80"
                        MinimumWidthRequest="80"
                        Source="{Binding ProfilePicUrl}"
                        VerticalOptions="CenterAndExpand" />
                    <StackLayout Spacing="0">
                        <Label
                            FontAttributes="Bold"
                            FontSize="20"
                            HorizontalOptions="Start"
                            Text="{Binding UserName}"
                            VerticalOptions="EndAndExpand" />
                        <Label
                            x:Name="fullname"
                            FontSize="16"
                            HorizontalOptions="Start"
                            MinimumWidthRequest="{OnIdiom Phone=175,
                                                          Default=220}"
                            Text="{Binding FullName}"
                            VerticalOptions="End" />
                    </StackLayout>
                    <sh:MaterialFrame
                        Padding="0"
                        xct:TouchEffect.NativeAnimation="True"
                        xct:TouchEffect.NativeAnimationRadius="5"
                        CornerRadius="{OnIdiom Phone=20,
                                               Default=5}"
                        HasShadow="True"
                        HeightRequest="40"
                        HorizontalOptions="EndAndExpand"
                        IsClippedToBounds="True"
                        MaterialTheme="{AppThemeBinding Dark=Dark,
                                                        Light=Acrylic}"
                        VerticalOptions="EndAndExpand"
                        WidthRequest="{OnIdiom Default=120,
                                               Phone=40}">
                        <StackLayout
                            BackgroundColor="{AppThemeBinding Dark=#77000000,
                                                              Light=Transparent}"
                            Orientation="Horizontal"
                            VerticalOptions="CenterAndExpand">
                            <Path
                                Margin="7,10"
